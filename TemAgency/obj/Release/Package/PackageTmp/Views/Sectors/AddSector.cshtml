@model Ntl_Sector
@{
    ViewBag.Title = "Yeni Sektör";
}
@using (Html.BeginForm("SaveSector", "Sectors", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="pagetitle">
        <h1>Yeni Sektör</h1>
        <br />
        <br />
        <button class="btn btn-success" type="submit" style="width:max-content"><i class="fa fa-save"></i> Ekle</button>
        <a href="/Sectors/AllSectors" class="btn btn-warning float-end" style="margin:5px"><i class="fa fa-backward"></i> Vazgeç</a>
    </div>
    <section class="section dashboard">
        <div class="row" style="border:2px solid gray">
            <div class="col-lg-12">
                <div class="row table-responsive">
                    <div class="col-lg-12" style="margin:5px 0px 5px 0px">
                        <table>
                            <tr>
                                <td style="width:10%"><b>Kod</b></td>
                                <td style="width:10%">
                                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @style = "font-size:12px!Important", @readonly = "readonly"})
                                </td>
                                <td style="width:10%"></td>
                                <td style="width:10%"><b>Sektör Adı</b></td>
                                <td style="width:35%">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @style = "font-size:12px!Important", @required = "required", @autocomplete = "off" })
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
}