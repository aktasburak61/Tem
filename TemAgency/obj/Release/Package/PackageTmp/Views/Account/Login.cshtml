@model LoginViewModel
@{
    ViewBag.Title = "Kullanıcı Giriş Ekranı";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    .parent {
        margin: auto;
        display: flex;
        height: 80%;
        width: 100%;
    }
    .child {
        margin: auto; /* Magic! */
        max-width: 100%;
        max-height: 100%;
    }
</style>
<br />
<br />
<br />
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
    <div class="col-md-4 col-md-4 col-sm-4 col-xs-12">
        <div class="text-center m-b-md custom-login">
            <h3>GİRİŞ YAPINIZ</h3>
        </div>
        <div class="hpanel">
            <div style="text-align:center">
                <span style="color:red; text-align:center;"><strong> @ViewBag.msg</strong></span>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label" for="username"><b>Kullanıcı Adı</b></label>
                        @Html.TextBoxFor(model => Model.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı", @Value = Model.UserName, @required = "required" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label" for="password"><b>Şifre</b></label>
                        @Html.TextBoxFor(model => Model.Password, new { @class = "form-control", @type = "password", @placeholder = "**********", @Value = Model.Password, @required = "required" })
                    </div>
                    <div class="form-group" style="margin-top:5px">
                        <a href="/Account/ForgotPassword">
                            <span style="font-size:11px" class="float-end">Şifrenizi mi unuttunuz?</span>
                        </a>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-xs-8 p-t-5">
                            @Html.CheckBoxFor(model => Model.RememberMe, new { @class = "filled-in chk-col-pink" })
                            <label for="RememberMe"><b>Beni Hatırla</b></label>
                        </div>
                    </div>
                    <br />
                    <h6 class="text-danger">@Html.Raw(ViewBag.ErrorLogin)</h6>
                    <br />
                    <button type="submit" class="btn btn-success btn-block" style="background-color:red;border-color:red;min-width:fit-content!important;width:100%">Giriş</button>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-12" style="height:400px">
        <div class="parent">
            <img class="child" src="~/Images/tem.jpg" />
        </div>
    </div>
</div>
