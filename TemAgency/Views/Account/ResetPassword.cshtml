@model ResetPasswordViewModel
@{
    ViewBag.Title = "Şifre Sıfırlama";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Code)
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <br />
            <br />
            <h5><b>ŞİFRE SIFIRLAMA</b></h5>
            <br />
            <label class="text-danger">@Html.Raw(ViewBag.ErrorPwReset)</label>
            <br />
            <br />
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="row" style="margin-bottom:5px">
                    <div class="col-lg-4">
                        <label class="login2 float-end"> E-Posta</label>
                    </div>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.Email, new { @type = "text", @class = "form-control", @style = "font-weight: bold;font-size:12px !Important", @autocomplete = "new-email" })
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="col-lg-4">
                        <label class="login2 float-end"> Şifre</label>
                    </div>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @style = "font-weight: bold;font-size:12px !Important", @autocomplete = "new-password" })
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="col-lg-4">
                        <label class="login2 float-end"> Şifre Tekrar</label>
                    </div>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @type = "password", @class = "form-control", @style = "font-weight: bold;font-size:12px !Important;", @autocomplete = "new-password" })
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-success float-end" style="margin:5px"><i class="fa fa-unlock-keyhole"></i> Sıfırla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}