@model Ntl_Brand
@{
    ViewBag.Title = "Yeni Marka";
}
@using (Html.BeginForm("SaveBrand", "Brands", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="pagetitle">
        <h1>Yeni Marka</h1>
        <br />
        <br />
        <button class="btn btn-success float-end" type="submit" style="width:max-content"><i class="fa fa-save"></i> Ekle</button>
        <a href="/Brands/AllBrands" class="btn btn-warning float-end" style="margin-right:10px"><i class="fa fa-backward"></i> Vazgeç</a>
        <br />
        <br />
    </div>
    <section class="section dashboard">
        <div class="row" style="border:2px solid gray">
            <div class="col-lg-12">
                <div class="row table-responsive">
                    <div class="col-lg-12" style="margin:5px 0px 5px 0px">
                        <table style="width:100%">
                            <tr>
                                <td style="width:10%"><b>Marka Adı</b></td>
                                <td style="width:35%">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "font-size:12px!Important", @required = "required", @autocomplete = "off" })
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
}