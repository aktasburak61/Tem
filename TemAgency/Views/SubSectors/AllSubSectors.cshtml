@model IQueryable<Ntl_SubSector>
@{
    ViewBag.Title = "Alt Sektörler";
}
<div class="pagetitle">
    <div class="col-lg-12">
        <h1>Alt Sektörler</h1>
        <br />
        <br />
        <a type="button" href="@Url.Action("AddSubSector","SubSectors")" class="btn btn-primary pull-right-pro" style="width:max-content"><i class="fa fa-add"></i> Yeni Alt Sektör Ekle</a>
    </div>
</div>
<section class="section dashboard">
    <div class="row">
        @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Id).Hidden();
        columns.Add(model => model.Code).Titled("Kod");
        columns.Add(model => model.Description).Titled("Alt Sektör Adı");
        columns.Add(model => model.Ntl_Sector.Description).Titled("Bağlı Olduğu Sektör");
        columns.Add(model => "<a class='btn btn-warning pull-right' href='" + @Url.Action("EditSubSector", "SubSectors", new { number = model.Id }) + "')><i class='fa fa-edit'></i> Düzenle</a>" +
            " " + "<button class='btn btn-danger pull-right' onclick='deleteSubSector(" + model.Id + ",\"" + model.Code + "\",\"" + model.Description + "\")' data-bs-toggle='modal' data-bs-target='#ModalDeleteSubSector'><i class='fa fa-trash'></i> Sil</button>").Encoded(false).Css("definition-width");
    })
    .Empty("Hiçbir Veri Bulunamadı")
    .Filterable()
    .Sortable()
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<int, string> { { 25, "25" }, { 50, "50" }, { 100, "100" } };
        pager.ShowPageSizes = true;
        pager.RowsPerPage = 50;
    })
)
    </div>
</section>
<div id="ModalDeleteSubSector" class="modal modal-adminpro-general Customwidth-popup-WarningModal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("DeleteSubSector", "SubSectors", FormMethod.Post, new { id = "subSectorDeleteForm" }))
            {
                <div class="modal-body">
                    <br />
                    <h2>Uyarı</h2>
                    <br />
                    <br />
                    <p><b id="subSectorCode"></b> kodlu <b id="subSectorName"></b> isimli alt sektör silinecektir. Onaylıyor musunuz ?</p>
                </div>
                <div class="modal-footer">
                    <a href="#" data-bs-dismiss="modal" class="btn btn-rounded  btn-warning"><i class="fa fa-backward adminpro-informatio" aria-hidden="true"></i> Vazgeç</a>
                    <button type="submit" data-bs-dismiss="modal" class="btn btn-rounded btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</button>
                </div>
            }
        </div>
    </div>
</div>